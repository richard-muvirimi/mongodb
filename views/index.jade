extends layout

block content
  h1= title
  
  div.d-grid.gap-2.d-md-flex.justify-content-md-end
    a.btn.btn-outline-success(href="/add")  Add User

  div
    if users.length
      table.table
        thead
          tr
            th(scope="col") First Name
            th(scope="col") Last Name 
            th(scope="col") Email
            th(scope="col") &nbsp;
        tbody
        each user in users
          tr
            td= user.firstName
            td= user.lastName
            td= user.email 
            td(scope="row")
              div.btn-group(role="group")
                a.btn.btn-outline-primary(href="/view/" + user._id)  View
                a.btn.btn-outline-primary(href="/edit/" + user._id)  Edit
                button.btn.btn-outline-danger(onclick="onDelete('" + user._id + "', '" + user.firstName + " " + user.lastName + "')")  Delete
    else
      p No users yet

  div.d-grid.gap-2.d-md-flex.justify-content-md-end
    a.btn.btn-outline-success(href="/add")  Add User
